<script>
  const atkinson = document.querySelector('.switch-atkinson');
  const sylexiad = document.querySelector('.switch-sylexiad');

  atkinson.addEventListener('click', () => switchFont('atkinson'));
  sylexiad.addEventListener('click', () => switchFont('sylexiad'));

  function switchFont(fontName) {
    localStorage.setItem('documentFont', fontName);
    document.documentElement.className = fontName;
  }

  (function() {
    if(localStorage.getItem('documentFont')) {
      switchFont(localStorage.getItem('documentFont'));
    }
  }())
</script>

<style>
  .text-toggle {
    display: flex;
    gap: 1rem;
    /* aspect-ratio: 2 / 1; */
    border: none;
    padding: 0;
    background: transparent;
    font-size: var(--step-1);
    /* background: tomato; */
  }

  label {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    aspect-ratio: 1 / 1;
  }

  .text-toggle-choice {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    letter-spacing: 0.125em;
    cursor: pointer;
    padding: 0.25rem;
    font-weight: bold;
  }

  .text-radio {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
  }

  .text-radio:focus {
    outline-color: transparent;
  }

  .text-radio:focus ~ .text-toggle-choice {
    outline: 1px solid var(--foreground-muted);
    /* background: var(--background-muted); */
    color: var(--hover);
    outline-offset: 0.25rem;
  }

  .text-radio:checked ~ .text-toggle-choice {
    color: var(--hover);
  }

  #sylexiad {
    font-family: var(--sylexiad);
  }
</style>
